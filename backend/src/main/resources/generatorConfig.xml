<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MySQLTables" targetRuntime="MyBatis3">

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/app_db"
                        userId="user"
                        password="password"/>

        <!-- Entity のパッケージ -->
        <javaModelGenerator targetPackage="com.example.backend.dto"
                            targetProject="src/main/java"/>

        <!-- Mapper XML の出力 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources"/>

        <!-- Mapper interface の出力 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.example.backend.mapper"
                             targetProject="src/main/java"/>

        <!-- users テーブル -->
        <table tableName="users" domainObjectName="UserDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!-- exams テーブル -->
        <table tableName="exams" domainObjectName="ExamDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!-- books テーブル -->
        <table tableName="books" domainObjectName="BookDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!-- chapters テーブル -->
        <table tableName="chapters" domainObjectName="ChapterDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!-- chapter_status テーブル -->
        <table tableName="chapter_status" domainObjectName="ChapterStatusDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!-- study_logs テーブル -->
        <table tableName="study_logs" domainObjectName="StudyLogDto">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>
